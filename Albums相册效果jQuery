<script type="text/javascript">
$(function(){
	$("ul li>button").each(function(index,Dom){
		$(this).click(function(){
			var src=$(this).attr("llt");
			$("#p >img").get(0).src=src;
		})
	})
})
</script>
<style type="text/css">
	p body ul li button img{padding:0px;margin:0;}
	ul li{list-style:none;float:left;}
	p{width:100%;position:absolute;}
	ul{position:relative;top:200px;left:100px;}
	
</style>
